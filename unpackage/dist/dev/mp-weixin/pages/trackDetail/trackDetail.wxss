
.top {
		padding: 20rpx;
		height: 10vh;
		display: flex;
		align-items: center;
		background-color: white;
		margin: 30rpx;
		border-radius: 20rpx;
}
.cover {
		aspect-ratio: 1;
		height: 100%;
		overflow: hidden;
		border-radius: 50%;
}
image {
		width: 100%;
		height: 100%;
}
.box {
		margin-left: 40rpx;
		flex: 1;
}
.name {
		font-size: 40rpx;
}
.author {
		font-size: 30rpx;
		color: #a6a6a6;
}
.play {
		margin-right: 30rpx;
		width: 100rpx;
		height: 100rpx;
		border-radius: 50%;
		border: 1px solid #25d3de;
		color: #25d3de;
		text-align: center;
		line-height: 100rpx;
}
.content {
		margin: 30rpx;
		height: 80vh;
		overflow-y: scroll;
		border: 1px solid white;
}
.love {
		position: fixed;
		width: 100rpx;
		height: 100rpx;
		text-align: center;
		line-height: 100rpx;
		right: 50rpx;
		bottom: 50rpx;
		border-radius: 50%;
		background-color: white;
		color: #25d3de;
}
