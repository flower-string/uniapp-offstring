
.add {
		position: fixed;
		z-index: 1;
		width: 100rpx;
		height: 100rpx;
		background-color: black;
		color: white;
		display: flex;
		justify-content: center;
		align-items: center;
		line-height: 100rpx;
		border-radius: 50%;
		font-weight: 900;
		font-size: 80rpx;
		bottom: 100rpx;
		left: 50%;
		transform: translateX(-50%);
}
.add text {
		color: white;
}
.cards {
		width: 100vw;
		display: flex;
		justify-content: center;
}
.card {
		width: 22vw;
		height: 15vw;
		margin: 5vw;
		background-color: white;
		display: flex;
		flex-direction: column;
		justify-content: space-evenly;
		align-items: center;
		border-radius: 10rpx;
		box-shadow: 0px 8px 15px -3px rgba(0,0,0,0.1);
}
.tt {
		font-size: 22rpx;
		color: #bcbcbc;
}
.iconfont {
		color: black;
		font-weight: 900;
		font-size: 40rpx;
}
